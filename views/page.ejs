<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/homenavbar.ejs') %>
    <div class="container">
        <h1>Page <%= result.page %></h1>
        <br>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class='btn btn-success' href="/<%= article.slug %>">Read Article</a>
                </div>
            </div>
        <% }) %>
        <br>
        <div class='row'>
            <div class='col col-12'>
        
                <% if(result.page > 2) {%>
                    <a style='float: left;'  href='/articles/page/<%= result.page - 1 %>' class="btn btn-success"><< Previous</a><br>
                <% } else if(result.page == 2) { %>
                    <a style='float: left;' class="btn btn-success" href='/' ><< Previous</a><br>
                <%}%>
        
                <% if(result.next) {%>
                    <a style='float: right;'  href='/articles/page/<%= result.page + 1 %>' class="btn btn-success">Next >></a><br>
                <% } %>
            </div>
        </div>
    </div>
</body>
<%- include ('partials/footer.ejs') %>